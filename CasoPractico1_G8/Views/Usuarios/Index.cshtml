@model IEnumerable<CasoPractico1_G8.Models.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<h2 class="text-center text-primary">Listado de Usuarios</h2>

<div class="container">
    <div class="card shadow p-4">
        <a href="@Url.Action("Create", "Usuarios")" class="btn btn-primary mb-3">Crear Nuevo Usuario</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre de Usuario</th>
                    <th>Nombre Completo</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.NombreUsuario</td>
                        <td>@usuario.NombreCompleto</td>
                        <td>@usuario.Correo</td>
                        <td>@usuario.Telefono</td>
                        <td>@usuario.Rol</td>
                        <td>
                            <a href="@Url.Action("Edit", "Usuarios", new { id = usuario.Id })" class="btn btn-warning btn-sm">Editar</a>
                            <a href="@Url.Action("Details", "Usuarios", new { id = usuario.Id })" class="btn btn-info btn-sm">Detalles</a>
                            <a href="@Url.Action("Delete", "Usuarios", new { id = usuario.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
