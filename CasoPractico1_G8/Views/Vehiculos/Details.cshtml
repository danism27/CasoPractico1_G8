@model CasoPractico1_G8.Models.Vehiculo

@{
    ViewData["Title"] = "Detalles del Vehículo";
}

<h1>Detalles del Vehículo</h1>
<div>
    <h4>Vehículo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Placa</dt>
        <dd class="col-sm-10">@Model.Placa</dd>
        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>
        <dt class="col-sm-2">Capacidad</dt>
        <dd class="col-sm-10">@Model.CapacidadPasajeros</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Volver al listado</a>
</div>
