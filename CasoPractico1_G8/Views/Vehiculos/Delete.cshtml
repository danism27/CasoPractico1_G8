@model CasoPractico1_G8.Models.Vehiculo

@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<h1>Eliminar Vehículo</h1>
<h3>¿Está seguro de que desea eliminar este vehículo?</h3>
<div>
    <h4>Vehículo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Placa</dt>
        <dd class="col-sm-10">@Model.Placa</dd>
        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver al listado</a>
    </form>
</div>
