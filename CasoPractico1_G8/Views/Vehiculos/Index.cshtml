@model IEnumerable<CasoPractico1_G8.Models.Vehiculo>

@{
    ViewData["Title"] = "Listado de Vehículos";
}

<h2 class="text-center text-primary">Listado de Vehículos</h2>

<div class="container">
    <div class="card shadow p-4">
        <a href="@Url.Action("Create", "Vehiculos")" class="btn btn-success mb-3">Agregar Nuevo Vehículo</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Placa</th>
                    <th>Modelo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehiculo in Model)
                {
                    <tr>
                        <td>@vehiculo.Placa</td>
                        <td>@vehiculo.Modelo</td>
                        <td>@vehiculo.Estado</td>
                        <td>
                            <a href="@Url.Action("Edit", "Vehiculos", new { id = vehiculo.Id })" class="btn btn-warning btn-sm">Editar</a>
                            <a href="@Url.Action("Details", "Vehiculos", new { id = vehiculo.Id })" class="btn btn-info btn-sm">Detalles</a>
                            <a href="@Url.Action("Delete", "Vehiculos", new { id = vehiculo.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
