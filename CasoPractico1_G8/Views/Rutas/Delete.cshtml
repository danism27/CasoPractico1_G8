@model CasoPractico1_G8.Models.Ruta

@{
    ViewData["Title"] = "Eliminar Ruta";
}

<h2 class="text-center text-danger">Eliminar Ruta</h2>

<div class="container">
    <div class="card shadow p-4">
        <h4>¿Está seguro de que desea eliminar esta ruta?</h4>

        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">@(@Model.Estado ? "Activa" : "Inactiva")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <!-- Aquí cambiamos a "Delete" -->
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a href="@Url.Action("Index", "Rutas")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
