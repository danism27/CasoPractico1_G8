@model CasoPractico1_G8.Models.Ruta

@{
    ViewData["Title"] = "Detalle de Ruta";
}

<h2 class="text-center text-primary">Detalle de Ruta</h2>

<div class="container">
    <div class="card shadow p-4">
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Descripción</dt>
            <dd class="col-sm-10">@Model.Descripcion</dd>

            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">@(@Model.Estado ? "Activa" : "Inactiva")</dd>

            <dt class="col-sm-2">Paradas</dt>
            <dd class="col-sm-10">@Model.ParadasTexto</dd>

            <dt class="col-sm-2">Horarios</dt>
            <dd class="col-sm-10">@Model.HorariosTexto</dd>

            <dt class="col-sm-2">Fecha de Registro</dt>
            <dd class="col-sm-10">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-2">Usuario Registro</dt>
            <dd class="col-sm-10">@Model.UsuarioRegistroId</dd>
        </dl>

        <a href="@Url.Action("Index", "Rutas")" class="btn btn-primary">Volver al Listado</a>
    </div>
</div>