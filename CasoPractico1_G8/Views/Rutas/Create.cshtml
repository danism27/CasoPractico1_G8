@model CasoPractico1_G8.Models.Ruta

@{
    ViewData["Title"] = "Crear Ruta";
}

<h2 class="text-center text-primary">Crear Nueva Ruta</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="container">
    <div class="card shadow p-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre de la Ruta</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" required>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label">Estado</label>
                <select asp-for="Estado" class="form-select" required>
                    <option value="true">Activa</option>
                    <option value="false">Inactiva</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="ParadasTexto" class="form-label">Paradas (separadas por coma)</label>
                <input type="text" asp-for="ParadasTexto" class="form-control" placeholder="Ejemplo: Parada 1, Parada 2, Parada 3">
            </div>

            <div class="mb-3">
                <label asp-for="HorariosTexto" class="form-label">Horarios (separados por coma)</label>
                <input type="text" asp-for="HorariosTexto" class="form-control" placeholder="Ejemplo: 08:00 AM, 12:00 PM, 06:00 PM">
            </div>

            <div class="mb-3">
                <label asp-for="UsuarioRegistroId" class="form-label">Usuario que registró</label>
                <select asp-for="UsuarioRegistroId" asp-items="@(ViewData["UsuarioRegistroId"] as IEnumerable<SelectListItem>)" class="form-select" required>
                    <option value="">Seleccione un usuario</option>
                </select>
                <span asp-validation-for="UsuarioRegistroId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Guardar Ruta</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}